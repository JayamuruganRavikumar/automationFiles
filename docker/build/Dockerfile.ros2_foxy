FROM ros:foxy

ARG DEBIAN_FRONTEND=noninteractive

ENV SHELL /bin/bash
SHELL ["/bin/bash", "-c"]

RUN apt-get -qq update \
    && apt-get -qq upgrade \
    && apt-get -qq install \
	xauth \
	vim \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /root

RUN touch .Xauthority
RUN echo "xauth add $VARDPY${DISPLAY: -1} $VARPROTO $VARHEX" > .bashrc
RUN xauth list
